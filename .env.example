# OpenCode API key for AI agent (required)
# Get yours at https://opencode.ai
OPENCODE_API_KEY=sk-your-opencode-key

# Turso database for centralized storage (required for multi-server)
# Create a database at https://turso.tech
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# Discord webhook for notifications (optional)
# Create at: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# Server identification (optional, auto-detected from hostname if not set)
SERVER_ID=
SERVER_NAME=
