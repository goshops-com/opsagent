{
  "name": "opsagent",
  "version": "1.0.0",
  "description": "AI-powered system monitoring with automated remediation",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "opsagent": "./bin/opsagent.sh"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --minify",
    "start": "bun run src/index.ts",
    "daemon:start": "pm2 start ecosystem.config.cjs",
    "daemon:stop": "pm2 stop opsagent && pm2 delete opsagent",
    "daemon:restart": "pm2 restart opsagent",
    "daemon:status": "pm2 status opsagent",
    "daemon:logs": "pm2 logs opsagent",
    "postinstall": "mkdir -p logs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sjcotto/opsagent.git"
  },
  "keywords": [
    "monitoring",
    "ai",
    "agent",
    "devops",
    "automation",
    "remediation"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sjcotto/opsagent/issues"
  },
  "homepage": "https://github.com/sjcotto/opsagent#readme",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "openai": "^4.77.0",
    "dotenv": "^16.4.0",
    "express": "^4.21.0",
    "js-yaml": "^4.1.0",
    "socket.io": "^4.8.0",
    "systeminformation": "^5.23.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@types/bun": "latest"
  }
}
